<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/nunito"
            android:text="BikeShare"
            android:textSize="50sp" />

        <EditText
            android:id="@+id/nameSignup"
            android:layout_below="@id/appName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="32dp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:hint="Name"
            android:textSize="16sp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/edit_text_focus"
            android:inputType="textPersonName"
            android:textColor="@color/offWhite"
            style="@style/EditTextTheme"/>

        <EditText
            android:id="@+id/username"
            android:layout_below="@id/nameSignup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="32dp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:hint="Username"
            android:textSize="16sp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/edit_text_focus"
            android:textColor="@color/offWhite"
            style="@style/EditTextTheme"/>


        <EditText
            android:id="@+id/emailSignup"
            android:layout_below="@id/username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginVertical="8dp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:hint="Email"
            android:textSize="16sp"
            android:textColor="@color/offWhite"
            android:background="@drawable/edit_text_focus"
            android:inputType="textEmailAddress"
            style="@style/EditTextTheme"/>

        <EditText
        android:id="@+id/passwordSignup"
        android:layout_below="@id/emailSignup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="32dp"
            android:layout_marginVertical="8dp"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:hint="Password"
        android:textSize="16sp"
        android:textColor="@color/offWhite"
        android:background="@drawable/edit_text_focus"
        android:inputType="textPassword"
            style="@style/EditTextTheme"/>

        <EditText
            android:id="@+id/password2Signup"
            android:layout_below="@id/passwordSignup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginVertical="8dp"
            android:singleLine="true"
            android:hint="Re-enter Password"
            android:textSize="16sp"
            android:textColor="@color/offWhite"
            android:background="@drawable/edit_text_focus"
            android:inputType="textPassword"
            style="@style/EditTextTheme"/>

        <Button
            android:id="@+id/signupButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/button_margin"
            android:layout_below="@id/password2Signup"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:text="Create account"
            android:background="@drawable/edit_text_focus"
            android:backgroundTint="@color/buttonColor"
            android:layout_margin="@dimen/button_margin"/>

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signupButton"
            android:text="Already a member? Login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

    </RelativeLayout>

</ScrollView>