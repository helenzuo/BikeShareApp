<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/infoWindowHolder"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginEnd="12dp"
    android:layout_marginStart="12dp"
    android:layout_height="100dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:backgroundTint="@color/offWhite"
    android:clickable="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight=".3"
                    android:src="@drawable/bike"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="vertical"
                    android:layout_weight=".7">
                <RelativeLayout
                    android:id="@+id/titleAndDistanceContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:orientation="horizontal">
                        <TextView
                            android:id="@+id/stationCardTitle"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:textColor="@color/almostBlack"
                            android:textSize="16sp"
                            android:gravity="bottom"/>
                        <TextView
                            android:id="@+id/stationCardDistance"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/stationCardTitle"
                            android:layout_width="wrap_content"
                            android:textColor="@color/almostBlack"
                            android:textSize="12sp"
                            android:gravity="bottom|end"/>
                </RelativeLayout>
                        <TextView
                            android:layout_below="@+id/titleAndDistanceContainer"
                            android:id="@+id/stationCardAddress"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="@color/almostBlack"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_below="@+id/stationCardAddress"
                            android:id="@+id/stationOccupancy"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColor="@color/almostBlack"
                            android:textSize="12sp"/>
                </RelativeLayout>
        </TableRow>
</androidx.cardview.widget.CardView>

