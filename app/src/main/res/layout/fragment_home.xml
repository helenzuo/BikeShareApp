<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/fragment_home"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:focusable="true"
    android:focusableInTouchMode="true">

<!--    START BOOKING PAGE    -->
    <RelativeLayout
        android:id="@+id/startStateLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/bookAheadTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:paddingHorizontal="40dp"
            android:text="To help us keep track of our dock occupancy, book ahead!"
            android:textSize="24sp" />

        <Button
            android:id="@+id/startBookingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookAheadTextView"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:background="@color/buttonColor"
            android:fontFamily="@font/roboto_light"
            android:text="START BOOKING"
            android:textSize="18sp" />

    </RelativeLayout>
<!--   SELECT PREFERENCE (DEPARTURE) PAGE    -->
    <RelativeLayout
        android:id="@+id/queryDepartureLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/userQueryStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:fontFamily="@font/roboto_medium"
            android:focusable="true"
            android:paddingHorizontal="32dp"
            android:text="@string/userQueryStationDepart"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/stationSearchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userQueryStation"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_centerHorizontal="true">
            <EditText
                android:id="@+id/departureStationEditText"
                android:soundEffectsEnabled="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="5dp"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_toStartOf="@+id/mapViewButton"
                android:textSize="15sp"
                android:hint="Search for bike station"
                android:background="@drawable/edit_text_focus"
                android:drawableEnd="@drawable/edit_text_clear"
                android:theme="@style/EditTextTheme"/>

            <ImageButton
                android:id="@+id/mapViewButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/departureStationEditText"
                android:paddingTop="5dp"
                android:background="@color/transparent"
                android:src="@drawable/map_marker"
                android:tint="#a7bea9"/>
        </RelativeLayout>

        <ListView
            android:id="@+id/departureStationListView"
            android:layout_below="@id/stationSearchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:contextClickable="false"
            android:divider="@null"
            android:dividerHeight="5dp"
            android:cacheColorHint="@color/transparent"
            android:listSelector="@color/transparent"
            android:background="@color/transparent"/>

        <RelativeLayout
            android:id="@+id/departTimePickLayout"
            android:layout_below="@+id/departureStationListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:focusable="true"
                android:paddingHorizontal="32dp"
                android:layout_alignParentEnd="true"
                android:text="When would you like to depart?"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/timeEditText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_below="@+id/textView2"
                android:inputType="none"
                android:cursorVisible="false"
                android:focusable="false"
                android:hint="Select time"
                android:layout_alignParentEnd="true"
                android:background="@drawable/edit_text_focus"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/offWhite"
                android:theme="@style/timeSelectThemeText"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/walkingRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_below="@id/departTimePickLayout"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto_medium"
                android:focusable="true"
                android:paddingHorizontal="32dp"
                android:text="How far can you walk for an alternative station?"
                android:textSize="18sp" />
            <RelativeLayout
                android:id="@+id/progressTextViewContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_below="@id/textView3">
                <EditText
                    android:id="@+id/progressTextView"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:enabled="false"
                    android:inputType="number"
                    android:singleLine="true"
                    android:gravity="center"
                    android:theme="@style/EditTextTheme"
                    android:textColor="@color/offWhite"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="metres"
                    android:textSize="15sp"
                    android:layout_marginStart="1sp"
                    android:layout_alignBaseline="@id/progressTextView"
                    android:layout_toEndOf="@+id/progressTextView"/>
            </RelativeLayout>

            <SeekBar
                android:id="@+id/walkingDistanceSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@id/progressTextViewContainer"
                android:progressDrawable="@drawable/seek_bar"
                android:splitTrack="false"
                android:maxHeight="8dp"
                android:minHeight="8dp"
                android:thumb="@drawable/seek_bar_thumb"
                android:theme="@style/SeekBarWithoutSteps"
                android:max="15"/>

            <RelativeLayout
                android:id="@+id/toggleDistanceEnterStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_below="@id/walkingDistanceSeekBar">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter custom distance:"
                    android:textSize="14sp"
                    android:layout_toStartOf="@+id/customDistanceSwitch"
                    android:layout_marginEnd="16dp"
                    android:layout_alignBaseline="@+id/customDistanceSwitch"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/customDistanceSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:theme="@style/ThemeOverlay.MySwitchCompat"/>
            </RelativeLayout>
        </RelativeLayout>
        <Button
            android:id="@+id/nextButtonTimeSelected"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonColor"
            android:fontFamily="@font/roboto_light"
            android:textSize="18sp"
            android:text="NEXT"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/button_margin"/>
    </RelativeLayout>
<!--   DEPARTURE STATION SELECTED (WAITING TO QR SCAN) PAGE   -->
    <RelativeLayout
        android:id="@+id/departureStationSelectedLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false">

        <ImageView
            android:id="@+id/tabImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/qr_pull_down_circle"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/slideDownAnimation"
            android:focusableInTouchMode="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tabImageView"
            app:lottie_rawRes="@raw/slide_up"
            app:lottie_autoPlay="true"
            android:rotation="180"
            app:lottie_speed=".8"
            android:scaleY=".8"
            app:lottie_colorFilter="#777A72"
            app:lottie_loop="true"/>
        <TextView
            android:id="@+id/textViewSlideDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/slideDownAnimation"
            android:textSize="12sp"
            android:text="Slide down to open QR Scanner"/>

        <RelativeLayout
            android:id="@+id/departureStationDetailsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="50dp">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="When you arrive at"
                android:textSize="16sp"
                android:gravity="left"/>
            <TextView
                android:id="@+id/bookedDepartureStationNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:textSize="19sp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="left"/>

            <TextView
                android:id="@+id/reservedAddressDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookedDepartureStationNameTextView"
                android:gravity="left"
                android:textStyle="bold"
                android:textSize="12sp"/>

            <ImageButton
                android:id="@+id/directionsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transparent"
                android:tint="@color/colorAccent"
                android:src="@drawable/directions"
                android:layout_alignEnd="@id/bookedDepartureStationNameTextView"
                android:layout_alignTop="@id/textView4"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/QRInstruction"
                android:textSize="16sp"
                android:layout_below="@+id/reservedAddressDetails"
                android:gravity="left"/>
            <RelativeLayout
                android:id="@+id/timeDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/activity_vertical_margin"
                android:layout_below="@+id/textView5">
                <TextView
                    android:id="@+id/reservedTimeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reserved Time: "
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/reservedTimeDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/reservedTimeTitle"
                    android:layout_marginStart="2sp"
                    android:textSize="18sp"
                    android:layout_alignBaseline="@id/reservedTimeTitle"
                    android:fontFamily="@font/roboto_medium"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/addressInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timeDetails">
<!--                <TextView-->
<!--                    android:id="@+id/addressTitle"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:textSize="16sp"-->
<!--                    android:text="Address: "/>-->
<!--                <TextView-->
<!--                    android:id="@+id/reservedAddressDetails"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_toEndOf="@id/addressTitle"-->
<!--                    android:layout_alignTop="@+id/addressTitle"-->
<!--                    android:fontFamily="@font/roboto_medium"-->
<!--                    android:gravity="left"-->
<!--                    android:textSize="14sp"/>-->

<!--                <ImageButton-->
<!--                    android:id="@+id/directionsButton"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:backgroundTint="@color/transparent"-->
<!--                    android:tint="@color/colorAccent"-->
<!--                    android:src="@drawable/directions"-->
<!--                    android:layout_below="@id/addressTitle"-->
<!--                    android:layout_alignEnd="@id/reservedAddressDetails"/>-->
            </RelativeLayout>

        </RelativeLayout>
        <Button
            android:id="@+id/cancelReservationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="Cancel Reservation"
            android:background="@color/transparent"
            android:textSize="15sp"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"/>
    </RelativeLayout>
<!--   ARRIVAL STATION SELECTION PAGE   -->
    <RelativeLayout
        android:id="@+id/queryArrivalLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/userQueryStationArrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:focusable="true"
            android:paddingHorizontal="32dp"
            android:text="@string/userQueryStationArrive"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/stationSearchBarArrival"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userQueryStationArrival"
            android:layout_centerHorizontal="true">
            <EditText
                android:id="@+id/arrivalStationEditText"
                android:soundEffectsEnabled="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="10dp"
                android:textSize="15sp"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_toStartOf="@+id/mapViewButtonArrival"
                android:clickable="false"
                android:hint="Search for bike station"/>

            <ImageButton
                android:id="@+id/mapViewButtonArrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:src="@drawable/map_marker"
                android:tint="@color/colorAccent"/>
        </RelativeLayout>

        <ListView
            android:id="@+id/arrivalStationListView"
            android:layout_below="@id/stationSearchBarArrival"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:contextClickable="false"
            android:divider="@null"
            android:dividerHeight="5dp"
            android:cacheColorHint="@color/transparent"
            android:listSelector="@color/transparent"
            android:background="@color/transparent"/>

        <RelativeLayout
            android:id="@+id/arriveTimePickLayout"
            android:layout_below="@+id/arrivalStationListView"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/arriveTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:focusable="true"
                android:paddingHorizontal="32dp"
                android:text="How long do you want to borrow the bike for?"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/progressBorrowLengthTextViewContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/arriveTimeTextView"
                android:layout_centerHorizontal="true">
                <EditText
                    android:id="@+id/progressBorrowLengthTextView"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:gravity="center"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/mdtp_numbers_text_color"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="minutes"
                    android:textSize="15dp"
                    android:layout_marginStart="2sp"
                    android:layout_alignBaseline="@id/progressBorrowLengthTextView"
                    android:layout_toEndOf="@+id/progressBorrowLengthTextView"/>
            </RelativeLayout>

            <SeekBar
                android:id="@+id/borrowLengthSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@id/progressBorrowLengthTextViewContainer"
                android:progressDrawable="@drawable/seek_bar"
                android:splitTrack="false"
                android:maxHeight="8dp"
                android:minHeight="8dp"
                android:thumb="@drawable/seek_bar_thumb"
                android:theme="@style/SeekBarWithoutSteps"
                android:max="36"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/walkingRelativeLayoutArrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/arriveTimePickLayout"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_centerHorizontal="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="@dimen/activity_vertical_margin"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:focusable="true"
                android:paddingHorizontal="32dp"
                android:text="How far are you willing to walk to an alternative station?"
                android:textSize="18sp" />
            <RelativeLayout
                android:id="@+id/progressTextViewContainerArrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView6"
                android:layout_centerHorizontal="true">
                <EditText
                    android:id="@+id/progressTextViewArrival"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:gravity="center"
                    android:enabled="false"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/mdtp_numbers_text_color"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="metres"
                    android:textSize="15dp"
                    android:layout_marginStart="5dp"
                    android:layout_alignBaseline="@id/progressTextViewArrival"
                    android:layout_toEndOf="@+id/progressTextViewArrival"/>
            </RelativeLayout>

            <SeekBar
                android:id="@+id/walkingDistanceSeekBarArrival"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@id/progressTextViewContainerArrival"
                android:progressDrawable="@drawable/seek_bar"
                android:splitTrack="false"
                android:maxHeight="8dp"
                android:minHeight="8dp"
                android:thumb="@drawable/seek_bar_thumb"
                android:theme="@style/SeekBarWithoutSteps"
                android:max="15"/>

            <RelativeLayout
                android:id="@+id/toggleDistanceEnterStyleArrival"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@id/walkingDistanceSeekBarArrival">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter custom distance:"
                    android:textSize="13sp"
                    android:layout_toStartOf="@+id/customDistanceSwitchArrival"
                    android:layout_marginEnd="16dp"
                    android:layout_alignBaseline="@+id/customDistanceSwitchArrival"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/customDistanceSwitchArrival"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:theme="@style/ThemeOverlay.MySwitchCompat"/>
            </RelativeLayout>
        </RelativeLayout>
        <Button
            android:id="@+id/nextButtonTimeSelectedArrival"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonColor"
            android:fontFamily="@font/roboto_light"
            android:textSize="18sp"
            android:text="NEXT"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/activity_horizontal_margin"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/progressBarHolder"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        android:alpha="0.4"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/resultsMapFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:focusable="false"/>
</FrameLayout>