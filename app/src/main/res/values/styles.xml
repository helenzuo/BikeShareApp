<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="colorPrimary">@color/almostBlack</item>
        <item name="colorPrimaryDark">@color/backgroundColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/offWhite</item>
        <item name="editTextStyle">@style/EditTextTheme</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>

    </style>

    <style name="incomingMessageStyle" parent="@style/EditTextTheme">
        <item name="android:background">@drawable/shape_bg_incoming_bubble</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">46dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="outgoingMessageStyle" parent="@style/EditTextTheme">
        <item name="android:background">@drawable/shape_bg_outgoing_bubble</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginStart">46dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="yesNoRadioGroupStyle" parent="@style/AppTheme">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/yes_no_toggle_outline</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="noRadioButtonStyle" parent="@style/AppTheme">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:background">@drawable/toggle_widget_background_yes_no</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:text">NO</item>
        <item name="android:textColor">@drawable/yes_no_text_colour</item>
    </style>

    <style name="yesRadioButtonStyle" parent="@style/AppTheme">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:background">@drawable/toggle_widget_background_yes_no</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:text">YES</item>
        <item name="android:textColor">@drawable/yes_no_text_colour</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/offWhite</item>
        <item name="colorControlActivated">@color/default_blue_light</item>
        <item name="colorControlHighlight">@color/lightGreen</item>
        <item name="android:textColor">@color/offWhite</item>
        <item name="android:textColorHint">#90B4BAC0</item>
        <item name="android:padding">10dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="timeSelectThemeText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/offWhite</item>
        <item name="colorControlActivated">@color/buttonColor</item>
        <item name="android:textColor">@color/offWhite</item>
        <item name="android:textColorHint">#90B4BAC0</item>
        <item name="android:padding">16dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ActionButtonStyle" parent="@android:style/Widget.ActionButton">
        <item name="android:minWidth">32dip</item>
        <item name="android:paddingStart">0dip</item>
        <item name="android:paddingEnd">0dip</item>
    </style>

    <style name="themeOnverlay_timePicker" parent="@style/ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorControlActivated">@color/timePickerColor</item>
        <item name="colorAccent">@color/transparent</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:numbersBackgroundColor">#ffdddddd</item>
        <item name="android:headerAmPmTextAppearance">@style/TextAppearance.TimePickerDialogStyle.TimeLabel</item>
    <item name="android:headerTimeTextAppearance">@style/TextAppearance.TimePickerDialogStyle.TimeLabel</item> <!-- TimePicker Time *TextAppearance* -->
    </style>

    <style name="TextAppearance.TimePickerDialogStyle.TimeLabel" parent="@android:style/TextAppearance.Material">
        <item name="android:textColor">#FFE1A8</item>
    </style>

    <style name="SeekBarWithoutSteps" parent="Base.Widget.AppCompat.SeekBar.Discrete">
        <item name="tickMark">@null</item>
    </style>

    <style name="ThemeOverlay.MySwitchCompat" parent="">
        <item name="colorControlActivated">#cbdfbd</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">@color/okEditText</item>
    </style>

    <style name="AlertDialogCustom" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/buttonColor</item>
        <item name="android:textColorPrimary">@color/almostBlack</item>
        <item name="fontFamily">@font/lato</item>
    </style>

</resources>